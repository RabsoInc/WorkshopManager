@model CustomerManageViewModel

@{
    ViewData["Title"] = "Manage";
}

<style>
    .tab-content {
        border-left: 1px solid #ddd;
        border-right: 1px solid #ddd;
        border-bottom: 1px solid #ddd;
        padding: 10px;
    }

    .nav-tabs {
        margin-bottom: 0;
    }

</style>

<div class="p-4">
    
    @*Header*@
    <h6>Manage Customer Account</h6>
    <hr />
    <div class="row">
        <div class="col-2">
            <strong>Customer</strong>: @Model.Customer.Title.Description @Model.Customer.FirstName @Model.Customer.LastName
        </div>
        <div class="col-2">
            <strong>Balance</strong>: £ @Model.Balance
        </div>
        <div class="col-8">
            <a class="btn btn-outline-danger btn-secondary" style="width: 250px;">Record Payment</a>
            <a class="btn btn-outline-danger btn-secondary" style="width: 250px;">Book Job</a>
            <a class="btn btn-outline-danger btn-secondary" style="width: 250px;">Transaction History</a>
        </div>
    </div>
    <hr />

    @*Tab Headers*@
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" href="#home"><strong>Contact Details</strong></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#menu1"><strong>Address Details</strong></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#menu2"><strong>Vehicle Details</strong></a>
      </li>
    </ul>

    @*Tab Panes*@
    <div class="tab-content">
      <div class="tab-pane container active" id="home">

      </div>
      <div class="tab-pane container fade" id="menu1">

      </div>
      <div class="tab-pane container fade" id="menu2">

      </div>
    </div>

</div>

