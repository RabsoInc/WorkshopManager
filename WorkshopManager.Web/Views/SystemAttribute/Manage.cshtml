@model SystemAttributeViewModel

@{
    ViewData["Title"] = "Manage";
}



<div class="p-4">
    <div>
        <h4>Manage System Attributes</h4>
        <br />
        <hr />
    </div>
    <form method="post">
        <div class="row">
            <input hidden asp-for="@Model.SystemAttribute.Mapcode"/>
            <input hidden asp-for="@Model.SystemAttribute.Id"/>
            <div class="col-2">
                <label asp-for=@Model.SystemAttribute.AttributeName class="form-label"></label>
            </div>
            <div class="col-2">
                <input asp-for=@Model.SystemAttribute.AttributeName class="form-control" id="txtAttributeName" onchange="validateForm()"/>
                <span asp-validation-for=@Model.SystemAttribute.AttributeName class="text-danger"></span>
            </div>
            <div class="col-2">
                <button class="form-submit" type="submit" id="btnSubmit">Submit Changes</button>
            </div>
        </div>
    </form>
    <hr />

    <table class="table table-striped table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th>Id</th>
                <th>Attribute Name</th>
                <th>Attribute Mapcode</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var sysAttr in @Model.SystemAttributes)
            {
                <tr>
                    <td>@sysAttr.Id.ToString().ToUpper()</td>
                    <td>@sysAttr.AttributeName</td>
                    <td>@sysAttr.Mapcode</td>
                    <td> 
                        <a class="table-edit" asp-action="Manage" asp-controller="SystemAttribute" asp-route-id="@sysAttr.Id">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
$(document).ready(function() {
    $('#btnSubmit').attr('disabled', true);
    validateForm()
});

function validateForm(){
    var attributeNameVal = validateString($('#txtAttributeName').val());
    console.log(attributeNameVal);
    if(attributeNameVal == "1"){
        $('#btnSubmit').attr('disabled', false);
    } else{
        $('#btnSubmit').attr('disabled', true);
    }
}

</script>
