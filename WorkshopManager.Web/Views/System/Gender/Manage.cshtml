@model GenderViewModel

@{
    ViewData["Title"] = "Manage";
}

<div class="p-4">
    <div class="row">
        <div class="col-4">
            <div class="card h-100">
                <div class="card-header"><strong>Manage Gender</strong></div>
                <div class="card-body">
                    <form method="post" asp-controller="gender" asp-action="manage">
                        <input asp-for="@Model.ManageGender.Id" hidden/>
                        <div class="mb-3">
                            <label asp-for="@Model.ManageGender.Description" class="form-label"></label>
                            <input asp-for="@Model.ManageGender.Description" class="form-control" id="txtDescription" onchange="validateSubmitButton()"/>
                        </div>
                        <button class="form-submit">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="card h-100">
                <div class="card-header"><strong>All Genders</strong></div>
                <div class="card-body">
                    <table class="table-default">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Gender</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var entity in @Model.AllGenders)
                            {
                                <tr>
                                    <td>@entity.Id.ToString().ToUpper()</td>
                                    <td>@entity.Description</td>
                                    <td>
                                        <a class="table-edit" asp-action="manage" asp-controller="gender" asp-route-id="@entity.Id">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

